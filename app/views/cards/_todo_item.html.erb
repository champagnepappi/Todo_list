<li class='no-bullet'>
    <% if item.completed? %>
        <%= link_to unmark_card_todo_item_path(card, item.id), method: :patch, remote: true do %>
            <style="opacity: 0.4;"><i class="fi-check"></i></style>
        <% end %>
    <% else %>
        <%= link_to complete_card_todo_item_path(card, item.id), method: :patch, remote: true do %>
            <i class="fi-check"></i>
        <% end %>
    <% end %>
    <% item_completed? item %>
    <span class="no-bullet <%= 'completed' if @completed%>" id= <%= dom_id(item)%> > <%= item.content %></span>
    <%= link_to card_todo_item_path(card, item), method: :delete, data: {confirm: "Are you sure?"}, remote: true do %>
        <i class="fi-trash"></i>
    <% end %>
</li>
