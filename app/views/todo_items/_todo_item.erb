<table>
    <tr>
        <% if todo_item.completed? %>
            <td> <%= link_to "Unmark as complete",unmark_list_todo_item_path(@list, todo_item.id), method: :patch  %></td>
            <td><strike><%= todo_item.content %></strike></td>
            <td> <%= link_to "delete", list_todo_item_path(@list, todo_item), method: :delete, data: {confirm: "Are you sure?"} %></td>
            <% else todo_item.unmark? %>
                <td><%= link_to "Mark as complete",complete_list_todo_item_path(@list, todo_item.id), method: :patch  %></td>
                <td><%= todo_item.content %></td>
                <td><%= link_to "delete", list_todo_item_path(@list, todo_item), method: :delete, data: {confirm: "Are you sure?"} %></td>
            <% end %>
    </tr>
</table>
