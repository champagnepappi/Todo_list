<%= form_for(@list) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <%= f.text_field :title, placeholder: "Todo Item title" %>
        <%= f.text_area :description, placeholder: "Add description..." %>
    </div>
    <%= f.submit "Create", class: "button" %>
<% end %>
